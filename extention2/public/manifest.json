{
  "manifest_version": 3,
  "name": "YouTube Downloader",
  "version": "1.0",
  "description": "Download YouTube videos with a click.",
  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}