{
    "manifest_version": 3,
    "name": "YT Downloader Extension (Edu)",
    "version": "1.0.0",
    "description": "Download YouTube videos for educational purposes using your backend.",
    "permissions": ["downloads", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  